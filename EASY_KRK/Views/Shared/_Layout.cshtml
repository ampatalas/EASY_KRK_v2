<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EASY_KRK</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EASY_KRK", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(@Resources.Resources.Categories , "Index", "Kategoria")</li>
                    <li>@Html.ActionLink("Przedmioty", "Index", "Przedmiot")</li>
                    <li>@Html.ActionLink("Macierz śladowania", "MacierzSladowania", "Kierunek")</li>
                </ul>
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink(" ", "ChangeCulture", "Account", new { lang = "pl", returnUrl = this.Request.RawUrl }, new
           {
               style = "background: url('" + Url.Content("~/images/pl.png") + "') center no-repeat; display:block; height:50px; width:30px"
           })</li>
                <li>@Html.ActionLink(" ", "ChangeCulture", "Account", new { lang = "en", returnUrl = this.Request.RawUrl }, new
           {
               style = "background: url('" + Url.Content("~/images/en.png") + "') center no-repeat; display:block; height:50px; width:30px; margin-right: 20px"
           })</li>
                    </ul>
            </div>
        </div>
    </div>

    <div>
        <div class="col-sm-3">
                @Html.Action("Programy", "Kierunek")
        </div>
        <div class="container body-content col-sm-8">
            <br /><br />
            @RenderBody()

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - EASY_KRK</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
