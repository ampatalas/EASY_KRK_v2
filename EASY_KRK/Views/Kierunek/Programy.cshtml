@model EASY_KRK.Models.ProgramyViewModel

<br /><br />
<h4 class="program-li">Programy kształcenia</h4>

<hr />
<ul>
    @foreach (var kierunek in Model.Kierunki)
    {
    <li class="program-li">@kierunek
        <ul>
    
        @foreach (var program in Model.Programy)
        {
            if (program.Kierunek.NazwaKierunku == kierunek)
            {
                if (Model.IdProgramu == program.IdProgramuKsztalcenia)
                { 
                    <li>@Html.ActionLink("Studia " + program.Kierunek.Poziom.NazwaPoziomu + " " + program.Kierunek.RodzajStudiow.NazwaRodzajuStudiow + " " + program.FormaStudiow.NazwaFormyStudiow, "WybierzProgram", new { id = program.IdProgramuKsztalcenia }, new { @class = "program-li-selected" })</li>
                }
                else
                { 
                    <li>@Html.ActionLink("Studia " + program.Kierunek.Poziom.NazwaPoziomu + " " + program.Kierunek.RodzajStudiow.NazwaRodzajuStudiow + " " + program.FormaStudiow.NazwaFormyStudiow, "WybierzProgram", new { id = program.IdProgramuKsztalcenia }, new { @class = "program-li" })</li>
                }
            }
        }
        </ul>
    </li>
    }
</ul>
